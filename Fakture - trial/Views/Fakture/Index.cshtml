@model  System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<h1> Lista svih faktura</h1>
<div class="row">
    <div class="container">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Broj fakture</td>
                <td>Datum fakture</td>
                <td>Ukupna vrednost fakture</td>
                <td width="20%"></td>
            </tr>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i][1]</td>
                    <td>@Convert.ToDateTime(Model.Rows[i][2]).ToString("yyyy-MM-dd")</td>
                    <td>@Model.Rows[i][3]</td>
                    <td>
                        <button class="btn btn-default"><a href="@Url.Action("Edit","Fakture",new { id = Model.Rows[i][0] })" class="glyphicon glyphicon-edit"> Izmeni</a></button>
                        <button class="btn btn-default"><a href="@Url.Action("Delete","Fakture",new { id = Model.Rows[i][0] })" class="glyphicon glyphicon-remove-circle"> Delete</a></button>
                    </td>
                </tr>
            }
        </table>
       <button class="btn btn-default"><a href="@Url.Action("Create","Fakture")">Dodaj fakturu</a></button> 
    </div>
</div>


